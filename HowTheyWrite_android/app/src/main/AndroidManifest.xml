<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.kaiserpudding.howtheywrite">

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity android:name=".main.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity android:name=".lessonList.LessonListActivity">
    </activity>
    <activity android:name=".lessonList.NewLessonActivity">
    </activity>
    <activity android:name=".characterList.CharacterListActivity">
    </activity>
    <activity android:name=".characterList.NewCharacterActivity">
    </activity>
    <activity android:name=".lessonDetail.LessonDetailActivity">
    </activity>
    <activity android:name=".quiz.QuizActivity"
              android:windowSoftInputMode="stateAlwaysVisible">
    </activity>
  </application>

</manifest>